<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <size
                android:width="100dp"
                android:height="100dp" />
            <stroke
                android:width="10dp"
                android:color="#16161B" />
        </shape>



    </item>



    <item>
        <shape android:shape="oval">


            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />

            <size
                android:width="10dp"
                android:height="10dp" />
            <solid android:color="@color/transparent" />


        </shape>
    </item>



    <item>
        <shape android:shape="oval">
            <size
                android:width="1dp"
                android:height="1dp" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>



</layer-list>
